{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:jest/recommended",
    "plugin:storybook/recommended",
    "prettier"
  ],
  "plugins": ["jest"],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["app"]
      }
    }
  },
  "overrides": [
    {
      "files": ["*.stories.@(ts|tsx|js|jsx)"],
      "rules": {
        "storybook/hierarchy-separator": "error",
        "storybook/default-exports": "off"
      }
    }
  ]
}
